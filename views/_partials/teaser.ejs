<article class="teaser">
  <header>
    <a href="<%= link %>">
      <%- include('./hero.ejs', {
        image: data.post_hero_image
      }) %>
    </a>
    <%- PrismicDOM.RichText.asHtml(data.post_title, ctx.linkResolver) %>
  </header>
  <% if (data.body.length > 0) { %>
    <div><%= data.body[0].primary.body_copy[0].text %></div>
  <% } %>
  <footer>
    <a href="<%= link %>">Read more</a>
  </footer>
</article>